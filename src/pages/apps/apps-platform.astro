  }
  
  .app-name {
    @apply text-xl font-bold text-gray-900;
  }
  
  .app-description {
    @apply text-gray-600;
  }
  
  .category-tab.active {
    @apply bg-blue-600 text-white;
  }
</style>

<script>
  // Script to handle category tabs and billing toggle
  document.addEventListener('DOMContentLoaded', () => {
    // Category tabs functionality
    const categoryTabs = document.querySelectorAll('[data-category-tab]');
    const appCards = document.querySelectorAll('.app-card');
    
    // Function to show apps for selected category
    function showCategory(category) {
      // Hide all app cards first
      appCards.forEach(card => {
        card.style.display = 'none';
      });
      
      // Show app cards for the selected category
      document.querySelectorAll(`.app-card[data-category="${category}"]`).forEach(card => {
        card.style.display = 'block';
      });
      
      // Update active tab styling
      categoryTabs.forEach(tab => {
        if (tab.getAttribute('data-category-tab') === category) {
          tab.classList.add('active');
          tab.classList.remove('bg-gray-200', 'hover:bg-gray-300', 'text-gray-800');
          tab.classList.add('bg-blue-600', 'text-white');
          tab.setAttribute('aria-selected', 'true');
        } else {
          tab.classList.remove('active');
          tab.classList.remove('bg-blue-600', 'text-white');
          tab.classList.add('bg-gray-200', 'hover:bg-gray-300', 'text-gray-800');
          tab.setAttribute('aria-selected', 'false');
        }
      });
    }
    
    // Add click event listeners to category tabs
    categoryTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        showCategory(tab.getAttribute('data-category-tab'));
      });
    });
    
    // Show default category on page load
    if (categoryTabs.length > 0) {
      showCategory(categoryTabs[0].getAttribute('data-category-tab'));
    }
    
    // Billing toggle functionality
    const billingToggleApps = document.getElementById('billing-toggle-apps');
    const monthlyLabelApps = document.getElementById('monthly-label-apps');
    const yearlyLabelApps = document.getElementById('yearly-label-apps');
    
    if (billingToggleApps && monthlyLabelApps && yearlyLabelApps) {
      // Function to update the UI based on billing period for Apps Platform
      function updateAppsBillingUI(isYearly) {
        // Update the toggle appearance
        if (isYearly) {
          monthlyLabelApps.classList.remove('text-blue-600');
          monthlyLabelApps.classList.add('text-gray-500');
          yearlyLabelApps.classList.remove('text-gray-500');
          yearlyLabelApps.classList.add('text-blue-600');
          
          // Check the toggle if not already checked
          if (!billingToggleApps.checked) {
            billingToggleApps.checked = true;
          }
        } else {
          yearlyLabelApps.classList.remove('text-blue-600');
          yearlyLabelApps.classList.add('text-gray-500');
          monthlyLabelApps.classList.remove('text-gray-500');
          monthlyLabelApps.classList.add('text-blue-600');
          
          // Uncheck the toggle if not already unchecked
          if (billingToggleApps.checked) {
            billingToggleApps.checked = false;
          }
        }
        
        // Show/hide appropriate pricing elements for Apps Platform
        document.querySelectorAll('.monthly-price-apps').forEach(function(el) {
          if (isYearly) {
            el.classList.add('hidden');
          } else {
            el.classList.remove('hidden');
          }
        });
        
        document.querySelectorAll('.yearly-price-apps, .yearly-savings-apps').forEach(function(el) {
          if (isYearly) {
            el.classList.remove('hidden');
          } else {
            el.classList.add('hidden');
          }
        });
        
        // Show/hide appropriate buttons for Apps Platform
        document.querySelectorAll('.monthly-btn-apps').forEach(function(el) {
          if (isYearly) {
            el.classList.add('hidden');
          } else {
            el.classList.remove('hidden');
          }
        });
        
        document.querySelectorAll('.yearly-btn-apps').forEach(function(el) {
          if (isYearly) {
            el.classList.remove('hidden');
          } else {
            el.classList.add('hidden');
          }
        });
        
        // Update billing period text
        document.querySelectorAll('.billing-period-apps').forEach(function(el) {
          el.textContent = isYearly ? '/year' : '/mo';
        });
        
        // Store the current apps billing period preference in sessionStorage
        sessionStorage.setItem('appsBillingPeriod', isYearly ? 'yearly' : 'monthly');
      }
      
      // Check if returning from a Stripe page (referrer contains stripe.com)
      const isReturningFromStripe = document.referrer.includes('stripe.com');
      
      // Check if we have a stored billing period preference
      const storedAppsBillingPeriod = sessionStorage.getItem('appsBillingPeriod');
      
      // Set initial state for Apps Platform
      if (storedAppsBillingPeriod === 'yearly' || 
         (isReturningFromStripe && document.referrer.includes('yearly'))) {
        updateAppsBillingUI(true);
      } else {
        updateAppsBillingUI(false);
      }
      
      // Add event listener for Apps Platform toggle changes
      billingToggleApps.addEventListener('change', function() {
        updateAppsBillingUI(this.checked);
      });
    }
  });
</script>
