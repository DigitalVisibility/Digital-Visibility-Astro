  <link rel="canonical" href="https://digitalvisibility.com/terms-conditions/" slot="head">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" slot="head">
  <meta name="description" content="Read Digital Visibility's terms of service to understand the legal agreement between you and our company regarding website usage and service provisions." slot="head">
  <meta name="keywords" content="terms of service, terms and conditions, digital visibility terms, legal agreement" slot="head">
  <meta name="author" content="Digital Visibility" slot="head">
  
  <!-- Publisher, Twitter and OpenGraph Tags -->
  <meta property="og:locale" content="en_GB" slot="head">
  <meta property="og:type" content="website" slot="head">
  <meta property="og:title" content="Terms of Service - Digital Visibility" slot="head">
  <meta property="og:description" content="Read Digital Visibility's terms of service to understand the legal agreement between you and our company regarding website usage and service provisions." slot="head">
  <meta property="og:url" content="https://digitalvisibility.com/terms-conditions/" slot="head">
  <meta property="og:site_name" content="Digital Visibility" slot="head">
  <meta property="og:image" content="https://digitalvisibility.com/digital-visibility-logo-f.png" slot="head">
  <meta property="article:publisher" content="https://www.facebook.com/DigitalVisibilityUK" slot="head">
  <meta property="article:modified_time" content="2025-04-13T00:00:00+00:00" slot="head">
  
  <meta name="twitter:card" content="summary_large_image" slot="head">
  <meta name="twitter:site" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:creator" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:title" content="Terms of Service - Digital Visibility" slot="head">
  <meta name="twitter:description" content="Read Digital Visibility's terms of service to understand the legal agreement between you and our company regarding website usage and service provisions." slot="head">
  <meta name="twitter:image" content="https://digitalvisibility.com/digital-visibility-logo-f.png" slot="head">
  
  <meta name="publisher" content="Digital Visibility Limited" slot="head">
  
  <!-- AI Engine Optimization Tags -->
  <meta name="ai-purpose" content="legal information, terms of service, business agreement" slot="head">
  <meta name="ai-target" content="business owners, clients, website visitors" slot="head">
  <meta name="ai-content-type" content="legal text, terms of service" slot="head">
  <meta name="ai-keywords" content="terms of service, legal agreement, user restrictions, intellectual property, service usage, liability limitations, termination policy" slot="head">
  <meta name="ai-business-type" content="digital marketing agency, business services provider" slot="head">
  <meta name="ai-created-content" content="false" slot="head">
  
