  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Terms of Service - Digital Visibility",
    "description": "Read Digital Visibility's terms of service to understand the legal agreement between you and our company regarding website usage and service provisions.",
    "url": "https://digitalvisibility.com/terms-conditions/",
    "lastReviewed": "2025-04-13",
    "mainContentOfPage": {
      "@type": "WebPageElement",
      "cssSelector": ".prose"
    },
    "speakable": {
      "@type": "SpeakableSpecification",
      "cssSelector": ["h1", "h2", "p"]
    },
    "publisher": {
      "@type": "Organization",
      "name": "Digital Visibility",
      "logo": {
        "@type": "ImageObject",
        "url": "https://digitalvisibility.com/digital-visibility-logo-f.png"
      }
    },
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://digitalvisibility.com",
      "name": "Digital Visibility - Human Powered, AI Accelerated Solutions"
    },
    "breadcrumb": {
      "@type": "BreadcrumbList",
