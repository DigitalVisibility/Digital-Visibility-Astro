---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Meta object for SEO
const meta = {
  title: "AI Automation Services Swansea | Save Money While Making Money | Digital Visibility",
  description: "Transform your business with AI automation that saves more than it costs. Custom AI agents, workflow automation, digital marketing & free website. Just £40/hour for everything.",
