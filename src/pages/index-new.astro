  image: "https://imagedelivery.net/xUD9jGQuj6OKHFKJ8WGwXA/3fb9c0e0-d1e0-4f4f-1aac-0e74e1f35900/public"
};
---

<MainLayout title={meta.title}>
  <!-- SEO and Meta Tags -->
  <link rel="canonical" href="https://digitalvisibility.com/" slot="head">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" slot="head">
  <meta name="description" content={meta.description} slot="head">
  <meta name="keywords" content={meta.keywords} slot="head">
  
  <!-- Open Graph -->
  <meta property="og:title" content={meta.title} slot="head">
  <meta property="og:description" content={meta.description} slot="head">
  <meta property="og:image" content={meta.image} slot="head">
  <meta property="og:type" content="website" slot="head">
  
  <!-- Preload critical resources -->
  <link rel="preload" as="image" href="https://imagedelivery.net/xUD9jGQuj6OKHFKJ8WGwXA/88c92a23-fd69-49c6-5731-9b3b9695b200/public?width=480" slot="head">
  
  <!-- Schema Markup -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Organization",
        "name": "Digital Visibility",
        "url": "https://digitalvisibility.com",
        "logo": "https://digitalvisibility.com/digital-visibility-logo-f.png",
        "description": "AI automation agency in Swansea offering custom AI agents, workflow automation, and digital marketing services at £40/hour",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "235 Peniel Green Road",
          "addressLocality": "Llansamlet, Swansea",
