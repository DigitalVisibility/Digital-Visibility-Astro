---
import MainLayout from '../../layouts/MainLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import registrarsData from '../../data/domain-transfer-registrars.json';

const WHATSAPP_NUMBER = '447725817197';
const WHATSAPP_CTA = `https://wa.me/${WHATSAPP_NUMBER}?text=Hi%20Digital%20Visibility%2C%20I%20need%20help%20with%20a%20domain%20transfer.`;
const PAGE_URL = 'https://digitalvisibility.com/client-hub/domain-transfer-guide';
const PAGE_TITLE = 'Domain Transfer Guide | Digital Visibility';
const PAGE_DESC = 'Simple steps to transfer your domain (.com/.net/.org) with Auth/EPP codes and .UK IPS tag instructions. Clear, quick, and easy to follow.';

const currentDate = new Date().toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const meta = {
  title: PAGE_TITLE,
  description: PAGE_DESC,
  keywords: "domain transfer, Auth code, EPP code, IPS tag, .uk domains, domain registrar, transfer domain, UK domains",
  image: "/digital-visibility-logo-f.png"
};

// Schema JSON-LD data
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type":"ListItem","position":1,"name":"Home","item":"https://digitalvisibility.com/"},
    {"@type":"ListItem","position":2,"name":"Client Hub","item":"https://digitalvisibility.com/client-hub/"},
    {"@type":"ListItem","position":3,"name":"Domain Transfer Guide","item":"https://digitalvisibility.com/client-hub/domain-transfer-guide"}
  ]
};

const webPageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Domain Transfer Guide",
  "url": "https://digitalvisibility.com/client-hub/domain-transfer-guide",
  "description": "Simple steps to transfer your domain (.com/.net/.org) with Auth/EPP codes and .UK IPS tag instructions."
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {"@type":"Question","name":"Do I need an Auth/EPP code?","acceptedAnswer":{"@type":"Answer","text":"Yes, for most domains like .com/.net/.org. Ask your current registrar for your code after unlocking the domain."}},
    {"@type":"Question","name":"What about .UK domains?","acceptedAnswer":{"@type":"Answer","text":".UK uses an IPS tag instead of an Auth/EPP code. Change the tag to CLOUDFLARE in your current registrar."}},
    {"@type":"Question","name":"Should I turn off privacy?","acceptedAnswer":{"@type":"Answer","text":"Yes. Turn off WHOIS privacy during the transfer so you can receive approval emails."}},
    {"@type":"Question","name":"How long does it take?","acceptedAnswer":{"@type":"Answer","text":"Most transfers finish in a few days after you approve the email from your current registrar."}}
  ]
};

const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "Transfer your domain",
  "step": [
    {"@type":"HowToStep","name":"Unlock domain"},
    {"@type":"HowToStep","name":"Get Auth/EPP code (or set IPS tag for .UK)"},
    {"@type":"HowToStep","name":"Approve email from current registrar"},
    {"@type":"HowToStep","name":"We accept and finish the move"}
  ]
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Digital Visibility Limited",
  "url": "https://digitalvisibility.com/",
  "telephone": "+44 7725 817197",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Swansea",
    "addressRegion": "Wales",
    "addressCountry": "GB"
  }
};
---

<MainLayout {meta}>
  <Fragment slot="head">
    <meta name="description" content={PAGE_DESC}>
    <link rel="canonical" href={PAGE_URL} />

    <!-- Open Graph -->
    <meta property="og:title" content={PAGE_TITLE}>
    <meta property="og:description" content={PAGE_DESC}>
    <meta property="og:url" content={PAGE_URL}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Digital Visibility">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content={PAGE_TITLE}>
    <meta name="twitter:description" content={PAGE_DESC}>

    <!-- Schema JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(webPageSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(howToSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)}></script>
  </Fragment>

  <Navigation slot="nav" />

  <!-- Main Content -->
  <div class="bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Breadcrumb -->
      <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <a href="/client-hub/" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Client Hub</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Domain Transfer Guide</span>
            </div>
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4 flex items-center justify-center">
          <svg class="w-8 h-8 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
          </svg>
          Domain Transfer Quick Guide
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Moving your domain is easy. Follow these simple steps. If you get stuck, send us a screenshot on WhatsApp and we'll help.
        </p>
      </div>

      <!-- Info Box -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
        <div class="flex items-start">
          <svg class="w-6 h-6 text-blue-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="text-lg font-semibold text-blue-900 mb-2">What is an Auth/EPP code?</h3>
            <p class="text-blue-800">
              It's a secret key from your current registrar. You use it to move your domain. Keep it safe. Never share passwords.
            </p>
          </div>
        </div>
      </div>

      <!-- Tabs Section -->
      <div class="mb-12">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button
              class="tab-button whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-blue-500 text-blue-600"
              data-tab="most-domains"
              role="tab"
              aria-selected="true"
              aria-controls="most-domains-panel"
            >
              <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
              </svg>
              Most domains (.com, .net, .org, ...)
            </button>
            <button
              class="tab-button whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
              data-tab="uk-domains"
              role="tab"
              aria-selected="false"
              aria-controls="uk-domains-panel"
            >
              <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              .UK domains
            </button>
          </nav>
        </div>

        <!-- Tab Content: Most Domains -->
        <div
          id="most-domains-panel"
          class="tab-content pt-8"
          role="tabpanel"
          aria-labelledby="most-domains"
        >
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <p class="text-yellow-800 font-medium">{registrarsData.most_tlds_note}</p>
            </div>
          </div>

          <div class="space-y-4">
            {registrarsData.registrars.map((registrar, index) => (
              <div class="border border-gray-200 rounded-lg">
                <button
                  class="accordion-button w-full text-left px-6 py-4 flex items-center justify-between bg-gray-50 hover:bg-gray-100 rounded-t-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                  data-accordion={`registrar-${index}`}
                  aria-expanded="false"
                  aria-controls={`registrar-${index}-content`}
                >
                  <span class="font-semibold text-gray-900">{registrar.name}</span>
                  <svg class="w-5 h-5 text-gray-500 transform transition-transform accordion-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div
                  id={`registrar-${index}-content`}
                  class="accordion-content hidden px-6 py-4 border-t border-gray-200"
                >
                  <ol class="list-decimal list-inside space-y-2">
                    {registrar.steps.map((step) => (
                      <li class="text-gray-700">{step}</li>
                    ))}
                  </ol>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Tab Content: UK Domains -->
        <div
          id="uk-domains-panel"
          class="tab-content pt-8 hidden"
          role="tabpanel"
          aria-labelledby="uk-domains"
        >
          <div class="text-center mb-8">
            <p class="text-lg text-gray-700 mb-6">{registrarsData.uk.intro}</p>

            <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-8 max-w-md mx-auto">
              <h3 class="text-2xl font-bold text-blue-900 mb-4">IPS Tag:</h3>
              <div class="bg-white border border-blue-300 rounded-lg p-4 flex items-center justify-between">
                <span id="ips-tag" class="text-3xl font-mono font-bold text-blue-600">{registrarsData.uk.ips_tag_value}</span>
                <button
                  onclick="copyToClipboard('CLOUDFLARE', this)"
                  class="btn-primary ml-4 flex items-center"
                  aria-label="Copy IPS tag to clipboard"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                  Copy
                </button>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 rounded-lg p-6">
            <h4 class="font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Steps to transfer .UK domains:
            </h4>
            <ol class="list-decimal list-inside space-y-2">
              {registrarsData.uk.steps.map((step) => (
                <li class="text-gray-700">{step}</li>
              ))}
            </ol>
          </div>
        </div>
      </div>

      <!-- After Transfer Checklist -->
      <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
        <h3 class="text-lg font-semibold text-green-900 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          After you've done this:
        </h3>
        <ul class="space-y-2">
          {registrarsData.after.map((item) => (
            <li class="flex items-start text-green-800">
              <svg class="w-5 h-5 mr-2 mt-0.5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              {item}
            </li>
          ))}
        </ul>
      </div>

      <!-- Local Service Notice -->
      <div class="text-center bg-gray-50 rounded-lg p-6 mb-8">
        <p class="text-gray-700">
          <svg class="w-5 h-5 mr-2 inline text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Local service in Swansea, Wales, UK. We also work with clients across the UK.
        </p>
      </div>

      <!-- Related Links -->
      <div class="border-t border-gray-200 pt-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Need more help?</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a href="/contact/" class="block p-4 border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-md transition-all">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="font-medium text-gray-900">Contact Us</span>
            </div>
          </a>
          <a href="/pricing/" class="block p-4 border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-md transition-all">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
              <span class="font-medium text-gray-900">Pricing</span>
            </div>
          </a>
          <a href="/#ai-analyzer" class="block p-4 border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-md transition-all">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 00-2 2z"></path>
              </svg>
              <span class="font-medium text-gray-900">AI Analyzer</span>
            </div>
          </a>
        </div>
      </div>

      <!-- Last Updated -->
      <div class="text-right mt-8 pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-500">Last updated: {currentDate}</p>
      </div>
    </div>
  </div>

  <!-- Sticky WhatsApp CTA -->
  <div class="fixed bottom-6 right-6 z-50 lg:hidden">
    <a
      href={WHATSAPP_CTA}
      target="_blank"
      rel="noopener noreferrer"
      class="btn-primary shadow-lg flex items-center px-4 py-3 rounded-full hover:shadow-xl transition-all"
      aria-label="Contact us on WhatsApp for help"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
      Message us on WhatsApp
    </a>
  </div>

  <!-- Toast notification -->
  <div id="copy-toast" class="fixed top-4 right-4 bg-green-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 hidden">
    <div class="flex items-center">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span aria-live="polite">Copied!</span>
    </div>
  </div>

  <Footer slot="footer" />

  <script slot="scripts">
    // Tab functionality
    document.addEventListener('DOMContentLoaded', function() {
      const tabButtons = document.querySelectorAll('.tab-button');
      const tabContents = document.querySelectorAll('.tab-content');

      tabButtons.forEach(button => {
        button.addEventListener('click', function() {
          const targetTab = this.dataset.tab;

          // Update button states
          tabButtons.forEach(btn => {
            btn.classList.remove('border-blue-500', 'text-blue-600');
            btn.classList.add('border-transparent', 'text-gray-500');
            btn.setAttribute('aria-selected', 'false');
          });

          this.classList.remove('border-transparent', 'text-gray-500');
          this.classList.add('border-blue-500', 'text-blue-600');
          this.setAttribute('aria-selected', 'true');

          // Update content visibility
          tabContents.forEach(content => {
            content.classList.add('hidden');
          });

          document.getElementById(targetTab + '-panel').classList.remove('hidden');
        });

        // Keyboard navigation
        button.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            this.click();
          }
        });
      });

      // Accordion functionality
      const accordionButtons = document.querySelectorAll('.accordion-button');

      accordionButtons.forEach(button => {
        button.addEventListener('click', function() {
          const targetContent = document.getElementById(this.getAttribute('aria-controls'));
          const isExpanded = this.getAttribute('aria-expanded') === 'true';
          const icon = this.querySelector('.accordion-icon');

          // Toggle content
          if (isExpanded) {
            targetContent.classList.add('hidden');
            this.setAttribute('aria-expanded', 'false');
            icon.classList.remove('rotate-180');
          } else {
            targetContent.classList.remove('hidden');
            this.setAttribute('aria-expanded', 'true');
            icon.classList.add('rotate-180');
          }
        });

        // Keyboard navigation
        button.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            this.click();
          }
        });
      });
    });

    // Copy to clipboard function
    function copyToClipboard(text, button) {
      if (navigator.clipboard && window.isSecureContext) {
        navigator.clipboard.writeText(text).then(function() {
          showCopyToast();
        }).catch(function(err) {
          console.error('Failed to copy: ', err);
        });
      } else {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        textArea.style.top = '-999999px';
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        try {
          document.execCommand('copy');
          showCopyToast();
        } catch (err) {
          console.error('Failed to copy: ', err);
        }
        textArea.remove();
      }
    }

    function showCopyToast() {
      const toast = document.getElementById('copy-toast');
      toast.classList.remove('hidden');
      setTimeout(() => {
        toast.classList.add('hidden');
      }, 2000);
    }
  </script>

  <style>
    .rotate-180 {
      transform: rotate(180deg);
    }

    .accordion-icon {
      transition: transform 0.2s ease-in-out;
    }
  </style>
</MainLayout>