          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
  
  <script>
    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', () => {
      if (typeof window.lucide !== 'undefined') {
        lucide.createIcons();
      }
    });
  </script>
