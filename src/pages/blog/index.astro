      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.map((post) => (
          <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
            <div class="relative">
              <a href={`/blog/${post.slug}/`}>
