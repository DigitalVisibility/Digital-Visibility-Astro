  <meta name="twitter:card" content="summary_large_image" slot="head">
  <meta name="twitter:site" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:creator" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:title" content={meta.twitterTitle} slot="head">
  <meta name="twitter:description" content={meta.twitterDescription} slot="head">
  
  <!-- AI Optimization Meta Tags -->
  <meta name="ai-generated" content="false" slot="head">
  <meta name="ai-purpose" content="blog content, industry insights, educational articles, business tips" slot="head">
  <meta name="ai-target" content="business owners, marketers, developers, entrepreneurs, digital professionals, UK businesses" slot="head">
  <meta name="ai-content-type" content="blog listing page, article directory, content hub" slot="head">
  <meta name="ai-business-type" content="digital agency blog, marketing insights platform, business education resource" slot="head">
  <meta name="ai-service-area" content="Swansea, Wales, United Kingdom, global audience" slot="head">
  <meta name="ai-expertise" content="AI automation, SEO strategies, web design, digital marketing, business transformation" slot="head">
  <meta name="ai-keywords" content="AI conversation automation insights, Claude MCP tutorials, SEO best practices 2025, web design trends, digital marketing strategies, business automation guides, UK tech blog, Welsh digital agency insights" slot="head">
  
  <!-- Advanced AI Optimization -->
  <meta name="ai-language" content="en-GB" slot="head">
  <meta name="ai-context" content="professional blog, industry insights, educational content platform" slot="head">
  <meta name="ai-industry" content="digital marketing, web development, AI technology, business automation" slot="head">
  <meta name="ai-topics" content="AI conversation automation, Claude MCP implementation, SEO strategies, web design innovation, digital transformation, marketing technology, business efficiency" slot="head">
  <meta name="ai-audience" content="business owners, CTOs, marketing managers, web developers, entrepreneurs, digital professionals" slot="head">
  <meta name="ai-intent" content="learn industry trends, discover best practices, get expert insights, stay updated on digital innovations" slot="head">
  <meta name="ai-unique-value" content="Royal Academy Award winner insights, real implementation case studies, UK-focused digital expertise, proven strategies with measurable results" slot="head">
  
  <!-- RSS Feed Link for discoverability -->
  <link rel="alternate" type="application/rss+xml" title="Digital Visibility Blog RSS Feed" href="/feed.xml" slot="head" />
  
  <Navigation slot="nav" />
  
  <!-- Hero Section -->
  <section class="py-16 relative" style="background-image: url('/digital visibility blog background.webp'); background-size: cover; background-position: center;">
    <!-- Semi-transparent overlay -->
    <div class="absolute inset-0 bg-white opacity-75"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight text-blue-900 drop-shadow-sm">
        Digital Visibility Blog
      </h1>
      <p class="text-xl mb-8 max-w-2xl mx-auto text-blue-800 font-medium">
        Insights, tips, and strategies to enhance your digital presence and grow your business.
      </p>
      
      <!-- Search Bar -->
      <div class="max-w-xl mx-auto">
        <form class="flex items-center shadow-md" id="searchForm">
          <input 
            type="text" 
            id="blogSearch"
            placeholder="Search articles..." 
            class="w-full px-5 py-3 rounded-l-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 border border-gray-300"
          >
          <button 
            type="submit" 
            class="bg-blue-600 hover:bg-blue-700 px-5 py-3 rounded-r-md transition-colors text-white border border-blue-700"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </form>
      </div>
    </div>
  </section>
  
  <!-- Category Navigation -->
  <section class="bg-gray-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex overflow-x-auto py-4 scrollbar-hide">
        <nav class="flex space-x-4 min-w-full">
          {categories.map((category) => (
            <a 
              href={`/blog/${
                category.slug === 'all' ? '' : 'category/' + category.slug + '/'
              }`}
              class={`px-4 py-2 text-sm font-medium rounded-md transition-colors ${
                category.slug === 'all' 
                ? 'bg-blue-600 text-white' 
                : 'bg-white text-gray-700 hover:bg-gray-100'
              }`}
            >
              {category.name} ({category.count})
            </a>
          ))}
        </nav>
      </div>
    </div>
  </section>
  
  <!-- Featured Posts -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
