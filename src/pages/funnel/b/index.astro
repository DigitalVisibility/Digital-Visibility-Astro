    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Disable submit button and show loading state
      formButton.disabled = true;
      formButton.textContent = 'Submitting...';
      
      try {
        const formData = new FormData(form);
        const response = await fetch('/api/funnel-lead', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Track conversion event
          gtag('event', 'conversion', {
            event_category: 'Funnel',
            event_label: 'Variant B - Form Submission',
            value: 200
          });
          
          clarity('event', 'funnel_conversion');
          
          // Redirect to thank you page
          window.location.href = result.redirectUrl;
        } else {
          throw new Error(result.error || 'Submission failed');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        alert('Sorry, there was an error submitting your request. Please try again or contact us directly.');
        
