      // Check if returning from a Stripe page (referrer contains stripe.com)
      const isReturningFromStripe = document.referrer.includes('stripe.com');
      
      // Check if we have a stored billing period preference
      const storedBillingPeriod = sessionStorage.getItem('billingPeriod');
      const storedAppsBillingPeriod = sessionStorage.getItem('appsBillingPeriod');
      
      // Set initial state based on stored preference or if returning from Stripe yearly link
      if (storedBillingPeriod === 'yearly' || 
         (isReturningFromStripe && document.referrer.includes('yearly'))) {
        updateBillingUI(true);
      } else {
        updateBillingUI(false);
      }
      
      // Set initial state for Apps Platform
      if (storedAppsBillingPeriod === 'yearly') {
        updateAppsBillingUI(true);
      } else {
        updateAppsBillingUI(false);
      }
      
      // Add event listener for toggle changes
      if (billingToggle) {
        billingToggle.addEventListener('change', function() {
          updateBillingUI(this.checked);
        });
      }
      
      // Add event listener for Apps Platform toggle changes
      if (billingToggleApps) {
        billingToggleApps.addEventListener('change', function() {
          updateAppsBillingUI(this.checked);
        });
      }
    });
  </script>
