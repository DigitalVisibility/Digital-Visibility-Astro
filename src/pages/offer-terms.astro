---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="Terms and Conditions - Free Website Offer | Digital Visibility">
  <!-- SEO and Canonical Tags -->
  <link rel="canonical" href="https://digitalvisibility.com/offer-terms/" slot="head">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" slot="head">
  <meta name="description" content="Terms and conditions for Digital Visibility's Free Website Offer. Understand eligibility requirements, what's included, and client responsibilities." slot="head">
  <meta name="keywords" content="free website offer, digital visibility terms, website offer terms, digital marketing offer" slot="head">
  <meta name="author" content="Digital Visibility" slot="head">
  
  <!-- Publisher, Twitter and OpenGraph Tags -->
  <meta property="og:locale" content="en_GB" slot="head">
  <meta property="og:type" content="website" slot="head">
  <meta property="og:title" content="Terms and Conditions - Free Website Offer | Digital Visibility" slot="head">
  <meta property="og:description" content="Terms and conditions for Digital Visibility's Free Website Offer. Understand eligibility requirements, what's included, and client responsibilities." slot="head">
  <meta property="og:url" content="https://digitalvisibility.com/offer-terms/" slot="head">
  <meta property="og:site_name" content="Digital Visibility" slot="head">
  <meta property="og:image" content="https://digitalvisibility.com/digital-visibility-logo-f.png" slot="head">
  <meta property="article:publisher" content="https://www.facebook.com/DigitalVisibilityUK" slot="head">
  <meta property="article:modified_time" content="2025-04-13T00:00:00+00:00" slot="head">
  
  <meta name="twitter:card" content="summary_large_image" slot="head">
  <meta name="twitter:site" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:creator" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:title" content="Terms and Conditions - Free Website Offer | Digital Visibility" slot="head">
  <meta name="twitter:description" content="Terms and conditions for Digital Visibility's Free Website Offer. Understand eligibility requirements, what's included, and client responsibilities." slot="head">
  <meta name="twitter:image" content="https://digitalvisibility.com/digital-visibility-logo-f.png" slot="head">
  
  <meta name="publisher" content="Digital Visibility Limited" slot="head">
  
  <!-- AI Engine Optimization Tags -->
  <meta name="ai-purpose" content="legal information, offer terms, promotion details" slot="head">
  <meta name="ai-target" content="business owners, prospective clients, website visitors" slot="head">
  <meta name="ai-content-type" content="legal text, offer terms, promotion details" slot="head">
  <meta name="ai-keywords" content="free website offer, digital marketing services, terms and conditions, service eligibility, website development, client responsibility" slot="head">
  <meta name="ai-business-type" content="digital marketing agency, business services provider" slot="head">
  <meta name="ai-created-content" content="false" slot="head">
  
  <!-- Offer Terms Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Terms and Conditions - Free Website Offer",
    "description": "Terms and conditions for Digital Visibility's Free Website Offer. Understand eligibility requirements, what's included, and client responsibilities.",
    "url": "https://digitalvisibility.com/offer-terms/",
    "lastReviewed": "2025-04-13",
    "mainContentOfPage": {
      "@type": "WebPageElement",
      "cssSelector": ".prose"
    },
    "speakable": {
      "@type": "SpeakableSpecification",
      "cssSelector": ["h1", "h2", "p"]
    },
    "publisher": {
      "@type": "Organization",
      "name": "Digital Visibility",
      "logo": {
        "@type": "ImageObject",
        "url": "https://digitalvisibility.com/digital-visibility-logo-f.png"
      }
    },
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://digitalvisibility.com",
      "name": "Digital Visibility - Human Powered, AI Accelerated Solutions"
    },
    "breadcrumb": {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://digitalvisibility.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Offer Terms",
          "item": "https://digitalvisibility.com/offer-terms/"
        }
      ]
    },
    "mainEntity": {
      "@type": "SpecialAnnouncement",
      "name": "Free Website Offer",
      "description": "Free Custom Business Website with 5+ hour monthly package subscription for 12 months",
      "url": "https://digitalvisibility.com/pricing/",
      "category": "https://schema.org/BusinessEvent"
    }
  }
  </script>
  <Navigation slot="nav" />
  
  <section class="bg-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-8 text-center">Terms and Conditions - Free Website Offer</h1>
      
      <div class="mb-12 bg-blue-50 p-6 rounded-lg border-l-4 border-blue-500">
        <p class="text-gray-700">This document outlines the terms and conditions for our Free Website Offer. Please read carefully to understand the eligibility requirements, what's included, and your responsibilities as a client.</p>
      </div>
      
      <div class="prose prose-lg max-w-none">
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">The Offer</h2>
        
        <ol class="space-y-8 list-decimal pl-6">
          <li>
            <div class="font-semibold text-gray-900 mb-2">Eligibility:</div>
            <p>This offer is valid for new clients only who subscribe to either:</p>
            <ul class="list-disc pl-6 mt-2 space-y-2">
              <li>Any 3-Hour Package with a 12-month commitment (receiving a Custom AI Authority Funnel Website Design valued at £1,995)</li>
              <li>Any 5+ Hour Package with a minimum monthly commitment of £200 for a minimum of 12 months (receiving a Custom Business Website Design valued at £2,995)</li>
            </ul>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Offer Period:</div>
            <p>This limited-time offer is valid from April 1st, 2025, until May 31st, 2025, unless extended or terminated earlier at Digital Visibility's discretion.</p>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Redemption Process:</div>
            <p>To claim the free website, clients must:</p>
            <ul class="list-disc pl-6 mt-2 space-y-2">
              <li>Complete the subscription purchase</li>
              <li>Contact our team within 30 days of subscription to initiate the website design process</li>
              <li>Provide necessary content and brand assets within 14 days of project kickoff or complete our <a href="/onboarding/" class="text-blue-600 hover:text-blue-800 underline">onboarding form</a></li>
            </ul>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Website Specifications:</div>
            <div class="space-y-4">
              <p>Depending on your subscription, you'll receive:</p>
              
              <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-4">
                <h4 class="font-semibold text-gray-900 mb-2">3-Hour Package: AI Authority Funnel</h4>
                <ul class="list-disc pl-6 space-y-2">
                  <li>Single-page custom AI Authority Funnel</li>
                  <li>Mobile-responsive design</li>
                  <li>AI Answer Engine Optimization (AEO) and SEO</li>
                  <li>Integration with Google Analytics</li>
                  <li>Free Hosting on our system</li>
                  <li>12 Months Support</li>
                </ul>
              </div>
              
              <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                <h4 class="font-semibold text-gray-900 mb-2">5+ Hour Package: Custom Business Website</h4>
                <p>Up to 7 pages for Custom Website Design, typically including:</p>
                <ol class="list-decimal pl-6 space-y-2 mt-2">
                  <li><span class="font-medium">Homepage:</span> Clearly stating what you do and who you serve</li>
                  <li><span class="font-medium">Services page:</span> Detailed descriptions of what you offer</li>
                  <li><span class="font-medium">Contact page:</span> Making it easy for potential clients to reach you</li>
                  <li><span class="font-medium">About page:</span> Building trust by sharing your story and expertise</li>
                  <li><span class="font-medium">FAQ page:</span> Excellent for addressing common questions and improving AEO</li>
                  <li><span class="font-medium">Blog:</span> Valuable for establishing expertise and targeting keywords</li>
                  <li><span class="font-medium">Pricing page:</span> Helpful for qualification (can be integrated into services)</li>
                </ol>
                <ul class="list-disc pl-6 mt-4 space-y-2">
                  <li>Mobile-responsive design</li>
                  <li>AI Answer Engine Optimization (AEO), Search Engine Optimization (SEO), and Geographic Optimization (GEO)</li>
                  <li>Integration with Google Analytics</li>
                  <li>Free premium hosting or optimization of your existing site</li>
                  <li>12 Months Support</li>
                </ul>
              </div>
            </div>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Timeline:</div>
            <p>Website development will typically be completed within 30 days after receiving all required materials from the client.</p>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Hosting and Support:</div>
            <ul class="list-disc pl-6 mt-2 space-y-2">
              <li>Free hosting is included for 12 months from website launch</li>
              <li>Technical support is provided for 12 months from website launch</li>
              <li>Continued free hosting and support is available to ongoing subscribers and clients who maintain their subscription beyond the initial 12-month period</li>
            </ul>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Subscription Requirement:</div>
            <p>Clients must maintain their subscription for a minimum of 12 months to retain the free website. Early termination of the subscription will result in losing any rights to the website ownership.</p>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Content Responsibility:</div>
            <p>We will provide free content creation, royalty-free images, and complete website design services as part of this offer.</p>
            <ul class="list-disc pl-6 mt-2 space-y-2">
              <li>Clients can choose between:
                <ol class="list-decimal pl-6 pt-2 space-y-2">
                  <li>Providing specific direction and materials for a website built to their exact specifications, or</li>
                  <li>Allowing our professional designers to create a unique website with minimal client input</li>
                </ol>
              </li>
              <li class="mt-2">Our team will handle all aspects of content creation, imagery, and design based on the client's preference</li>
              <li>Additional specialized content or custom photography may be available at standard rates if requested</li>
            </ul>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Website Options:</div>
            <div class="space-y-4">
              <p>Clients have two options for their free website:</p>
              
              <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-4">
                <h4 class="font-semibold text-gray-900 mb-2">Option 1: New Website on Our Platform</h4>
                <ul class="list-disc pl-6 space-y-2">
                  <li>A brand new website built on our premium hosting platform</li>
                  <li>Lightning-fast performance with no technical limitations</li>
                  <li>Free hosting included for the duration of your subscription</li>
                  <li>Maximum optimization for all search engines and AI platforms</li>
                </ul>
              </div>
              
              <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                <h4 class="font-semibold text-gray-900 mb-2">Option 2: Revamp Existing Website</h4>
                <ul class="list-disc pl-6 space-y-2">
                  <li>Upgrade and optimize your existing website on your current platform</li>
                  <li>Improved performance while working within your platform's limitations</li>
                  <li>Speed will be limited by your existing hosting infrastructure</li>
                  <li>You maintain your existing hosting arrangement</li>
                </ul>
                <p class="mt-3 text-amber-700 font-medium">Note: The AI Authority Funnel must be built and hosted on our platform to ensure maximum performance.</p>
              </div>
            </div>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Transferability:</div>
            <p>This offer is non-transferable and cannot be combined with any other promotions, discounts, or offers.</p>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Intellectual Property:</div>
            <p>Upon full payment of the 12-month subscription, the client will own all rights to the website design, excluding third-party elements such as stock photos or licensed software.</p>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Cancellation:</div>
            <p>Digital Visibility reserves the right to modify, suspend, or terminate this offer at any time without prior notice.</p>
          </li>
          
          <li>
            <div class="font-semibold text-gray-900 mb-2">Limitations:</div>
            <p>The free website offer does not include:</p>
            <ul class="list-disc pl-6 mt-2 space-y-2">
              <li>Custom application development</li>
              <li>E-commerce functionality (available as an upgrade)</li>
              <li>Third-party subscription costs or services</li>
              <li>Domain name registration</li>
            </ul>
          </li>
        </ol>
        
        <div class="mt-12 p-6 bg-blue-50 rounded-lg">
          <p class="mb-4">Digital Visibility reserves the right to make final decisions regarding all aspects of this offer. By claiming this offer, clients agree to these terms and conditions.</p>
          
          <p class="text-sm text-gray-500">Last Updated: April 12, 2025</p>
        </div>
        
        <div class="mt-12 p-6 bg-blue-50 rounded-lg border-l-4 border-blue-500">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">How to Get Started</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-blue-100 rounded-full p-2 mt-1">
                <span class="text-blue-600 font-bold">1</span>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-gray-900">Choose Your Service Package</h4>
                <p class="text-gray-700 mt-1">Visit our <a href="/pricing/#hour-packages" class="text-blue-600 hover:text-blue-800 underline">pricing page</a> to explore our different hour packages. Select either a 3+ Hour Package for an AI Authority Funnel or a 5+ Hour Package for a full business website.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-blue-100 rounded-full p-2 mt-1">
                <span class="text-blue-600 font-bold">2</span>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-gray-900">Subscribe to Your Chosen Package</h4>
                <p class="text-gray-700 mt-1">Complete your subscription with a 12-month commitment to qualify for your free website. Yearly subscriptions offer the best value with two months free!</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-blue-100 rounded-full p-2 mt-1">
                <span class="text-blue-600 font-bold">3</span>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-gray-900">Complete the Onboarding Process</h4>
                <p class="text-gray-700 mt-1">After subscribing, you'll be directed to complete our <a href="/onboarding/" class="text-blue-600 hover:text-blue-800 underline">onboarding form</a> so we can gather all the information needed to create your perfect website.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-blue-100 rounded-full p-2 mt-1">
                <span class="text-blue-600 font-bold">4</span>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-gray-900">Website Development Begins</h4>
                <p class="text-gray-700 mt-1">Our team will start working on your website immediately and typically complete it within 30 days after receiving all your materials and information.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-8 flex justify-center">
          <a href="/pricing/#hour-packages" class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition-all shadow-lg hover:shadow-xl hover:transform hover:-translate-y-1">
            Claim Your Free Website
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</MainLayout>
