      window.nextStep = function() {
        if (currentStep < steps.length - 1) {
          currentStep++;
          render();
        } else {
          showResults();
        }
      };

      window.prevStep = function() {
        if (currentStep > 0) {
          currentStep--;
          render();
        }
      };

