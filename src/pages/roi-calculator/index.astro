---
import MainLayout from '../../layouts/MainLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

export const prerender = false;
---

<MainLayout title="ROI Calculator | Digital Visibility - Calculate Your Digital Marketing ROI">
  <!-- SEO and Canonical Tags -->
  <link rel="canonical" href="https://digitalvisibility.com/roi-calculator/" slot="head">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" slot="head">
  
  <!-- Core Meta Tags -->
  <meta name="keywords" content="ROI calculator, digital marketing ROI, SEO ROI calculator, marketing automation ROI, AI automation ROI, business automation calculator, Swansea digital marketing ROI" slot="head">
  <meta name="description" content="Calculate your potential ROI from Digital Visibility's SEO, AI automation, and digital marketing services. Free instant results showing traffic growth, lead generation, and time savings." slot="head">
  
  <!-- OpenGraph Tags -->
  <meta property="og:title" content="Digital Marketing ROI Calculator | See Your Potential Returns" slot="head">
  <meta property="og:description" content="Discover how much revenue you could generate with our SEO+AEO+GEO+SBO strategies and AI automation. Free instant ROI calculation." slot="head">
  <meta property="og:url" content="https://digitalvisibility.com/roi-calculator/" slot="head">
  
  <!-- Styles for the calculator -->
  <style>
    /* Tailwind-like utility classes for the calculator */
    .min-h-screen { min-height: 100vh; }
    .bg-gradient-to-br { background: linear-gradient(to bottom right, var(--tw-gradient-stops)); }
    .from-blue-50 { --tw-gradient-from: #eff6ff; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to); }
    .via-white { --tw-gradient-via: #ffffff; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-via), var(--tw-gradient-to); }
    .to-purple-50 { --tw-gradient-to: #faf5ff; }
    .p-4 { padding: 1rem; }
    .max-w-4xl { max-width: 56rem; }
    .mx-auto { margin-left: auto; margin-right: auto; }
    .text-center { text-align: center; }
    .mb-8 { margin-bottom: 2rem; }
    .mb-6 { margin-bottom: 1.5rem; }
    .mb-4 { margin-bottom: 1rem; }
    .mb-2 { margin-bottom: 0.5rem; }
    .text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
    .text-2xl { font-size: 1.5rem; line-height: 2rem; }
    .text-xl { font-size: 1.25rem; line-height: 1.75rem; }
    .text-lg { font-size: 1.125rem; line-height: 1.75rem; }
    .font-bold { font-weight: 700; }
    .font-semibold { font-weight: 600; }
    .text-gray-900 { color: #111827; }
    .text-gray-700 { color: #374151; }
    .text-gray-600 { color: #4b5563; }
    .text-gray-500 { color: #6b7280; }
    .text-blue-600 { color: #2563eb; }
    .text-purple-600 { color: #9333ea; }
    .text-green-600 { color: #16a34a; }
    .text-white { color: #ffffff; }
    .bg-white { background-color: #ffffff; }
    .bg-gray-50 { background-color: #f9fafb; }
    .bg-blue-50 { background-color: #eff6ff; }
    .bg-blue-600 { background-color: #2563eb; }
    .bg-purple-600 { background-color: #9333ea; }
    .rounded-xl { border-radius: 0.75rem; }
    .rounded-lg { border-radius: 0.5rem; }
    .shadow-lg { box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); }
    .border { border-width: 1px; }
    .border-gray-200 { border-color: #e5e7eb; }
    .border-gray-100 { border-color: #f3f4f6; }
    .p-8 { padding: 2rem; }
    .p-6 { padding: 1.5rem; }
    .px-6 { padding-left: 1.5rem; padding-right: 1.5rem; }
    .py-4 { padding-top: 1rem; padding-bottom: 1rem; }
    .py-3 { padding-top: 0.75rem; padding-bottom: 0.75rem; }
    .space-y-6 > * + * { margin-top: 1.5rem; }
    .space-y-4 > * + * { margin-top: 1rem; }
    .grid { display: grid; }
    .gap-6 { gap: 1.5rem; }
    .gap-4 { gap: 1rem; }
    .flex { display: flex; }
    .items-center { align-items: center; }
    .justify-between { justify-content: space-between; }
    .justify-center { justify-content: center; }
    .w-full { width: 100%; }
    .transition-all { transition-property: all; transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1); transition-duration: 150ms; }
    .duration-300 { transition-duration: 300ms; }
    .hover\:shadow-xl:hover { box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); }
    .hover\:bg-blue-700:hover { background-color: #1d4ed8; }
    .cursor-pointer { cursor: pointer; }
    .select-none { user-select: none; }
    .opacity-50 { opacity: 0.5; }
    .transform { transform: translateX(var(--tw-translate-x)) translateY(var(--tw-translate-y)) rotate(var(--tw-rotate)) skewX(var(--tw-skew-x)) skewY(var(--tw-skew-y)) scaleX(var(--tw-scale-x)) scaleY(var(--tw-scale-y)); }
    .scale-105 { --tw-scale-x: 1.05; --tw-scale-y: 1.05; }
    
    @media (min-width: 768px) {
      .md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }
    
    @media (min-width: 1024px) {
      .lg\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }
    }
    
    /* Custom styles for the calculator */
    .roi-calculator-container {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }
    
    .roi-step-indicator {
      display: flex;
      justify-content: space-between;
      margin-bottom: 2rem;
      padding: 0 1rem;
    }
    
    .roi-step {
      display: flex;
      flex-direction: column;
      align-items: center;
      flex: 1;
      position: relative;
    }
    
    .roi-step:not(:last-child)::after {
      content: '';
      position: absolute;
      top: 20px;
      left: 50%;
      width: 100%;
      height: 2px;
      background-color: #e5e7eb;
    }
    
    .roi-step.active::after {
      background-color: #2563eb;
    }
    
    .roi-step-icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #e5e7eb;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
      position: relative;
    }
    
    .roi-step.active .roi-step-icon {
      background-color: #2563eb;
      color: white;
    }
    
    .roi-step.completed .roi-step-icon {
      background-color: #16a34a;
      color: white;
    }
    
    .roi-form-group {
      margin-bottom: 1.5rem;
    }
    
    .roi-form-label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #374151;
    }
    
    .roi-form-input,
    .roi-form-select {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid #d1d5db;
      border-radius: 0.5rem;
      font-size: 1rem;
      transition: border-color 0.15s ease-in-out;
    }
    
    .roi-form-input:focus,
    .roi-form-select:focus {
      outline: none;
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }
    
    .roi-radio-group {
      display: grid;
      gap: 0.75rem;
    }
    
    .roi-radio-label {
      display: flex;
      align-items: center;
      padding: 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.15s ease-in-out;
    }
    
    .roi-radio-label:hover {
      border-color: #2563eb;
      background-color: #eff6ff;
    }
    
    .roi-radio-label.selected {
      border-color: #2563eb;
      background-color: #eff6ff;
    }
    
    .roi-radio-input {
      margin-right: 0.75rem;
    }
    
    .roi-checkbox-group {
      display: grid;
      gap: 1rem;
    }
    
    .roi-checkbox-label {
      display: flex;
      align-items: flex-start;
      padding: 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.15s ease-in-out;
    }
    
    .roi-checkbox-label:hover {
      border-color: #2563eb;
      background-color: #eff6ff;
    }
    
    .roi-checkbox-label.selected {
      border-color: #2563eb;
      background-color: #eff6ff;
    }
    
    .roi-checkbox-input {
      margin-right: 0.75rem;
      margin-top: 0.25rem;
    }
    
    .roi-button {
      padding: 0.75rem 2rem;
      border-radius: 0.5rem;
      font-weight: 600;
      transition: all 0.15s ease-in-out;
      cursor: pointer;
      border: none;
    }
    
    .roi-button-primary {
      background-color: #2563eb;
      color: white;
    }
    
    .roi-button-primary:hover {
      background-color: #1d4ed8;
    }
    
    .roi-button-secondary {
      background-color: #e5e7eb;
      color: #374151;
    }
    
    .roi-button-secondary:hover {
      background-color: #d1d5db;
    }
    
    .roi-button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    
    .roi-navigation {
      display: flex;
      justify-content: space-between;
      margin-top: 2rem;
    }
    
    /* Icon styles */
    .roi-icon {
      width: 24px;
      height: 24px;
      display: inline-block;
      vertical-align: middle;
    }
    
    .roi-icon-lg {
      width: 32px;
      height: 32px;
    }
    
    /* Results styles */
    .roi-results-card {
      background: white;
      border-radius: 0.75rem;
      padding: 1.5rem;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      border: 1px solid #f3f4f6;
    }
    
    .roi-metric-value {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }
    
    .roi-metric-label {
      font-weight: 600;
      color: #111827;
      margin-bottom: 0.5rem;
    }
    
    .roi-metric-description {
      font-size: 0.875rem;
      color: #6b7280;
    }
  </style>

  <Navigation />

  <div class="roi-calculator-container min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 p-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Digital Visibility ROI Calculator</h1>
        <p class="text-xl text-gray-600">Discover Your Digital Transformation Potential</p>
      </div>

      <!-- Calculator will be mounted here by JavaScript -->
      <div id="calculator-app"></div>
    </div>
  </div>

  <Footer />

  <!-- Initialize the calculator -->
  <script>
    // Simple vanilla JavaScript implementation of the ROI calculator
    document.addEventListener('DOMContentLoaded', function() {
      const app = document.getElementById('calculator-app');
      
      // Calculator state
      let currentStep = 0;
      let formData = {
        companySize: '',
        revenue: '',
        industry: '',
        location: '',
        websiteTraffic: '',
        currentSEORanking: '',
        aiPresence: '',
        marketingSpend: '',
        primaryGoal: '',
        currentROI: '',
        manualTime: '',
        competitivePressure: '',
        aiToolsUsage: '',
        servicesInterested: [],
        timeline: '',
        budget: '',
        name: '',
        email: '',
        company: '',
        phone: ''
      };

      const steps = [
        { title: "Business Profile", icon: "üè¢" },
        { title: "Digital Maturity", icon: "üîç" },
        { title: "Growth Goals", icon: "üéØ" },
        { title: "AI Readiness", icon: "üß†" }
      ];

      const industries = [
        "E-commerce/Retail", "SaaS/Technology", "Professional Services", "Consulting",
        "Healthcare", "Financial Services", "Real Estate", "Education", "Marketing/Agency",
        "Legal Services", "Automotive", "Construction", "Manufacturing", "Hospitality",
        "Non-profit", "Other"
      ];

      const services = [
        { id: 'search_optimization', name: 'SEO+AEO+GEO+SBO+Geographic Optimization', desc: 'Complete search engine & AI platform visibility' },
        { id: 'agentic_marketing', name: 'Agentic Marketing Automations', desc: 'AI agents for lead gen, content, social media' },
        { id: 'agentic_business', name: 'Agentic Business Operations', desc: 'AI agents for admin, customer service, workflows' },
        { id: 'full_stack_automation', name: 'Full-Stack AI Automation Service', desc: 'Complete business transformation with AI' }
      ];

      // Render functions
      function renderStepIndicator() {
        return `
          <div class="roi-step-indicator">
            ${steps.map((step, index) => `
              <div class="roi-step ${index === currentStep ? 'active' : ''} ${index < currentStep ? 'completed' : ''}">
                <div class="roi-step-icon">
                  ${index < currentStep ? '‚úì' : step.icon}
                </div>
                <span class="text-sm mt-2 ${index === currentStep ? 'font-semibold' : ''}">${step.title}</span>
              </div>
            `).join('')}
          </div>
        `;
      }

      function renderStep0() {
        return `
          <div class="bg-white rounded-xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Tell us about your business</h2>
            
            <div class="roi-form-group">
              <label class="roi-form-label">Company Size</label>
              <div class="roi-radio-group">
                ${['solo', '1-3', '4-10', '11-50', '50+'].map(size => `
                  <label class="roi-radio-label ${formData.companySize === size ? 'selected' : ''}">
                    <input type="radio" name="companySize" value="${size}" class="roi-radio-input" ${formData.companySize === size ? 'checked' : ''}>
                    <span>${size === 'solo' ? 'Solo Trader' : size + ' employees'}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Annual Revenue</label>
              <div class="roi-radio-group">
                ${['¬£0-¬£50k', '¬£50k-¬£100k', '¬£100k-¬£250k', '¬£250k-¬£500k', '¬£500k+'].map(revenue => `
                  <label class="roi-radio-label ${formData.revenue === revenue ? 'selected' : ''}">
                    <input type="radio" name="revenue" value="${revenue}" class="roi-radio-input" ${formData.revenue === revenue ? 'checked' : ''}>
                    <span>${revenue}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Industry</label>
              <select class="roi-form-select" name="industry" value="${formData.industry}">
                <option value="">Select your industry</option>
                ${industries.map(industry => `
                  <option value="${industry}" ${formData.industry === industry ? 'selected' : ''}>${industry}</option>
                `).join('')}
              </select>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Location</label>
              <input type="text" class="roi-form-input" name="location" value="${formData.location}" placeholder="e.g., Swansea, Wales">
            </div>
          </div>
        `;
      }

      function renderStep1() {
        return `
          <div class="bg-white rounded-xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Your current digital presence</h2>
            
            <div class="roi-form-group">
              <label class="roi-form-label">Monthly Website Traffic</label>
              <div class="roi-radio-group">
                ${['0-100', '100-500', '500-1000', '1000-5000', '5000+'].map(traffic => `
                  <label class="roi-radio-label ${formData.websiteTraffic === traffic ? 'selected' : ''}">
                    <input type="radio" name="websiteTraffic" value="${traffic}" class="roi-radio-input" ${formData.websiteTraffic === traffic ? 'checked' : ''}>
                    <span>${traffic} visitors</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Current SEO Ranking</label>
              <div class="roi-radio-group">
                ${['Not ranking', 'Page 3+', 'Page 2', 'Page 1 (4-10)', 'Top 3'].map(ranking => `
                  <label class="roi-radio-label ${formData.currentSEORanking === ranking ? 'selected' : ''}">
                    <input type="radio" name="currentSEORanking" value="${ranking}" class="roi-radio-input" ${formData.currentSEORanking === ranking ? 'checked' : ''}>
                    <span>${ranking}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">AI Search Presence</label>
              <div class="roi-radio-group">
                ${['Never appear', 'Rarely appear', 'Sometimes appear', 'Often appear'].map(presence => `
                  <label class="roi-radio-label ${formData.aiPresence === presence ? 'selected' : ''}">
                    <input type="radio" name="aiPresence" value="${presence}" class="roi-radio-input" ${formData.aiPresence === presence ? 'checked' : ''}>
                    <span>${presence} in AI results</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Current Marketing Spend</label>
              <div class="roi-radio-group">
                ${['¬£0-¬£500', '¬£500-¬£1000', '¬£1000-¬£2500', '¬£2500-¬£5000', '¬£5000+'].map(spend => `
                  <label class="roi-radio-label ${formData.marketingSpend === spend ? 'selected' : ''}">
                    <input type="radio" name="marketingSpend" value="${spend}" class="roi-radio-input" ${formData.marketingSpend === spend ? 'checked' : ''}>
                    <span>${spend}/month</span>
                  </label>
                `).join('')}
              </div>
            </div>
          </div>
        `;
      }

      function renderStep2() {
        return `
          <div class="bg-white rounded-xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Your growth objectives</h2>
            
            <div class="roi-form-group">
              <label class="roi-form-label">Primary Business Goal</label>
              <div class="roi-radio-group">
                ${['Increase revenue', 'Generate more leads', 'Save time', 'Beat competition', 'Build brand'].map(goal => `
                  <label class="roi-radio-label ${formData.primaryGoal === goal ? 'selected' : ''}">
                    <input type="radio" name="primaryGoal" value="${goal}" class="roi-radio-input" ${formData.primaryGoal === goal ? 'checked' : ''}>
                    <span>${goal}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Current Marketing ROI</label>
              <div class="roi-radio-group">
                ${['Negative/Loss', 'Break even', '1-2x return', '2-3x return', '3x+ return', 'Not tracking'].map(roi => `
                  <label class="roi-radio-label ${formData.currentROI === roi ? 'selected' : ''}">
                    <input type="radio" name="currentROI" value="${roi}" class="roi-radio-input" ${formData.currentROI === roi ? 'checked' : ''}>
                    <span>${roi}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Time Spent on Manual Tasks</label>
              <div class="roi-radio-group">
                ${['0-5 hours', '5-10 hours', '10-20 hours', '20-30 hours', '30+ hours'].map(time => `
                  <label class="roi-radio-label ${formData.manualTime === time ? 'selected' : ''}">
                    <input type="radio" name="manualTime" value="${time}" class="roi-radio-input" ${formData.manualTime === time ? 'checked' : ''}>
                    <span>${time}/week</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Competitive Pressure</label>
              <div class="roi-radio-group">
                ${['Low', 'Moderate', 'High', 'Very high'].map(pressure => `
                  <label class="roi-radio-label ${formData.competitivePressure === pressure ? 'selected' : ''}">
                    <input type="radio" name="competitivePressure" value="${pressure}" class="roi-radio-input" ${formData.competitivePressure === pressure ? 'checked' : ''}>
                    <span>${pressure}</span>
                  </label>
                `).join('')}
              </div>
            </div>
          </div>
        `;
      }

      function renderStep3() {
        return `
          <div class="bg-white rounded-xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">AI & automation readiness</h2>
            
            <div class="roi-form-group">
              <label class="roi-form-label">Current AI Tools Usage</label>
              <div class="roi-radio-group">
                ${['None', 'Basic (ChatGPT)', 'Some automation', 'Multiple tools', 'Advanced usage'].map(usage => `
                  <label class="roi-radio-label ${formData.aiToolsUsage === usage ? 'selected' : ''}">
                    <input type="radio" name="aiToolsUsage" value="${usage}" class="roi-radio-input" ${formData.aiToolsUsage === usage ? 'checked' : ''}>
                    <span>${usage}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Services You're Interested In</label>
              <div class="roi-checkbox-group">
                ${services.map(service => `
                  <label class="roi-checkbox-label ${formData.servicesInterested.includes(service.id) ? 'selected' : ''}">
                    <input type="checkbox" name="servicesInterested" value="${service.id}" class="roi-checkbox-input" ${formData.servicesInterested.includes(service.id) ? 'checked' : ''}>
                    <div>
                      <div class="font-semibold">${service.name}</div>
                      <div class="text-sm text-gray-600">${service.desc}</div>
                    </div>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Implementation Timeline</label>
              <div class="roi-radio-group">
                ${['ASAP', 'Within 1 month', 'Within 3 months', 'Within 6 months', 'Just exploring'].map(timeline => `
                  <label class="roi-radio-label ${formData.timeline === timeline ? 'selected' : ''}">
                    <input type="radio" name="timeline" value="${timeline}" class="roi-radio-input" ${formData.timeline === timeline ? 'checked' : ''}>
                    <span>${timeline}</span>
                  </label>
                `).join('')}
              </div>
            </div>

            <div class="roi-form-group">
              <label class="roi-form-label">Monthly Budget Range</label>
              <div class="roi-radio-group">
                ${['¬£200-¬£500', '¬£500-¬£1000', '¬£1000-¬£2000', '¬£2000-¬£5000', '¬£5000+'].map(budget => `
                  <label class="roi-radio-label ${formData.budget === budget ? 'selected' : ''}">
                    <input type="radio" name="budget" value="${budget}" class="roi-radio-input" ${formData.budget === budget ? 'checked' : ''}>
                    <span>${budget}/month</span>
                  </label>
                `).join('')}
              </div>
            </div>
          </div>
