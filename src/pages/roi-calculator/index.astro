        return `
          ${renderStepIndicator()}
          ${stepContent}
          <div class="roi-navigation">
            ${currentStep > 0 ? `<button class="roi-button roi-button-secondary" onclick="prevStep()">Previous</button>` : '<div></div>'}
            <button class="roi-button roi-button-primary" onclick="nextStep()" ${!isStepComplete() ? 'disabled' : ''}>
              ${currentStep === steps.length - 1 ? 'Calculate ROI' : 'Next'}
