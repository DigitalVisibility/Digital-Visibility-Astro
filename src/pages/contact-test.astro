---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="Contact Form Test | Digital Visibility">
  <!-- SEO Meta Tags -->
  <meta name="robots" content="noindex, nofollow" slot="head">
  <meta name="description" content="Test page for Cloudflare Turnstile integration with Web3Forms." slot="head">
  
  <!-- Cloudflare Turnstile Script -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer slot="head"></script>
  
  <Navigation slot="nav" />
  
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-gray-900 md:text-4xl lg:text-5xl mb-4">Contact Form Test</h1>
        <p class="text-xl text-gray-600">Testing Cloudflare Turnstile integration with Web3Forms</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-lg p-8">
        <form class="space-y-6" action="https://api.web3forms.com/submit" method="POST" id="contactTestForm">
          <!-- Web3Forms Access Key -->
          <input type="hidden" name="access_key" value="04b98b5a-c1af-43bf-a223-9f711109ac82">
          
          <!-- Destination Email -->
          <input type="hidden" name="to_email" value="support@digitalvisibility.com">
          
          <!-- Subject Line -->
          <input type="hidden" name="subject" value="New Contact Form Test Submission">
          
          <!-- Honeypot Field -->
          <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
          
          <!-- Success Redirect URL -->
          <input type="hidden" name="redirect" value="https://digitalvisibility.com/thank-you/">
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
              <input type="text" id="name" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
              <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
            </div>
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number (Optional)</label>
            <input type="tel" id="phone" name="phone" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Your Message</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required></textarea>
          </div>
          
          <!-- Cloudflare Turnstile Widget -->
          <div class="cf-turnstile" data-sitekey="0x4AAAAAABLjSEqx_MGVFkGW" data-callback="onTurnstileSuccess"></div>
          
          <!-- Hidden field for Turnstile token -->
          <input type="hidden" name="cf-turnstile-response" id="cf-turnstile-response">
          
          <div class="text-center">
            <button type="submit" class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-md transition-colors">
              Submit Test Form
            </button>
          </div>
          
          <div id="form-status" class="hidden mt-4 p-4 rounded-md"></div>
        </form>
      </div>
    </div>
  </section>
  
  <script>
    // Turnstile callback function
    window.onTurnstileSuccess = function(token) {
      console.log("Turnstile verified with token:", token);
      document.getElementById('cf-turnstile-response').value = token;
    };
    
    // Form submission handler
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contactTestForm');
      const statusDiv = document.getElementById('form-status');
      
      if (form) {
        form.addEventListener('submit', function(event) {
          // Get the token from the hidden field
          const token = document.getElementById('cf-turnstile-response').value;
          
          if (!token) {
            event.preventDefault();
            statusDiv.textContent = "Please complete the Turnstile verification.";
            statusDiv.classList.remove('hidden', 'bg-green-100', 'text-green-800');
            statusDiv.classList.add('bg-red-100', 'text-red-800');
            console.error("Turnstile token is missing");
            return false;
          }
          
          console.log("Form submission proceeding with token:", token);
          statusDiv.textContent = "Form is being submitted...";
          statusDiv.classList.remove('hidden', 'bg-red-100', 'text-red-800');
          statusDiv.classList.add('bg-blue-100', 'text-blue-800');
        });
      }
    });
  </script>
  
  <Footer />
</MainLayout>
