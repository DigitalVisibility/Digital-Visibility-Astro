---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="Disclaimer - Digital Visibility">
  <!-- SEO and Canonical Tags -->
  <link rel="canonical" href="https://digitalvisibility.com/disclaimer/" slot="head">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" slot="head">
  <meta name="description" content="Read Digital Visibility's disclaimer regarding the general information provided on our website, limitation of liability, and professional advice guidelines." slot="head">
  <meta name="keywords" content="disclaimer, legal information, digital visibility, terms of use" slot="head">
  <meta name="author" content="Digital Visibility" slot="head">
  
  <!-- Publisher, Twitter and OpenGraph Tags -->
  <meta property="og:locale" content="en_GB" slot="head">
  <meta property="og:type" content="website" slot="head">
  <meta property="og:title" content="Disclaimer - Digital Visibility" slot="head">
  <meta property="og:description" content="Read Digital Visibility's disclaimer regarding the general information provided on our website, limitation of liability, and professional advice guidelines." slot="head">
  <meta property="og:url" content="https://digitalvisibility.com/disclaimer/" slot="head">
  <meta property="og:site_name" content="Digital Visibility" slot="head">
  <meta property="og:image" content="https://digitalvisibility.com/digital-visibility-logo-f.png" slot="head">
  <meta property="article:publisher" content="https://www.facebook.com/DigitalVisibilityUK" slot="head">
  <meta property="article:modified_time" content="2025-04-13T00:00:00+00:00" slot="head">
  
  <meta name="twitter:card" content="summary_large_image" slot="head">
  <meta name="twitter:site" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:creator" content="@DigitalVisiUK" slot="head">
  <meta name="twitter:title" content="Disclaimer - Digital Visibility" slot="head">
  <meta name="twitter:description" content="Read Digital Visibility's disclaimer regarding the general information provided on our website, limitation of liability, and professional advice guidelines." slot="head">
  <meta name="twitter:image" content="https://digitalvisibility.com/digital-visibility-logo-f.png" slot="head">
  
  <meta name="publisher" content="Digital Visibility Limited" slot="head">
  
  <!-- AI Engine Optimization Tags -->
  <meta name="ai-purpose" content="legal information, disclaimer, business terms" slot="head">
  <meta name="ai-target" content="business owners, clients, website visitors" slot="head">
  <meta name="ai-content-type" content="legal text, disclaimer" slot="head">
  <meta name="ai-keywords" content="disclaimer, legal terms, professional advice, terms of use, content usage, liability, website usage" slot="head">
  <meta name="ai-business-type" content="digital marketing agency, business services provider" slot="head">
  <meta name="ai-created-content" content="false" slot="head">
  
  <!-- Disclaimer Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Disclaimer - Digital Visibility",
    "description": "Read Digital Visibility's disclaimer regarding the general information provided on our website, limitation of liability, and professional advice guidelines.",
    "url": "https://digitalvisibility.com/disclaimer/",
    "lastReviewed": "2025-04-13",
    "mainContentOfPage": {
      "@type": "WebPageElement",
      "cssSelector": ".prose"
    },
    "speakable": {
      "@type": "SpeakableSpecification",
      "cssSelector": ["h1", "h2", "p"]
    },
    "publisher": {
      "@type": "Organization",
      "name": "Digital Visibility",
      "logo": {
        "@type": "ImageObject",
        "url": "https://digitalvisibility.com/digital-visibility-logo-f.png"
      }
    },
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://digitalvisibility.com",
      "name": "Digital Visibility - Human Powered, AI Accelerated Solutions"
    },
    "breadcrumb": {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://digitalvisibility.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Disclaimer",
          "item": "https://digitalvisibility.com/disclaimer/"
        }
      ]
    }
  }
