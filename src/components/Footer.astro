<script>
  // Footer location dropdown toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButtons = document.querySelectorAll('.footer-service-toggle');
    
    toggleButtons.forEach(button => {
      button.addEventListener('click', () => {
        const service = button.getAttribute('data-service');
        const locationList = document.querySelector(`[data-service-locations="${service}"]`);
        const icon = button.querySelector('[data-lucide]') as HTMLElement;
        
        if (locationList) {
          locationList.classList.toggle('hidden');
          if (icon) {
            icon.style.transform = locationList.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
          }
        }
      });
    });
  });
</script>
